<!DOCTYPE html>
<html lang="pt_BR">
    <head>
        <meta charset="UTF-8">
    
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}">
        
        <!-- Estilo personalizado -->
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="{{ asset('bootstrap/css/estilo.css') }}">
    
        <!-- Font Awesome -->
        <link rel="stylesheet" href="{{ asset('plugins/fontawesome/css/all.min.css') }}">
        
        <title>CMS - {% block title %}{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mb-3">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}">CMS</a>
                <div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item dropdown">
                                <a href="" class="nav-link dropdown-toggle" id="nav_usuario_logado" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-user-circle"></i> {{ app.user.dadosPessoais.nome }} {{ app.user.dadosPessoais.sobrenome }}
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav_usuario_logado">
                                    <h6 class="dropdown-header">
                                        {% if is_granted("ROLE_ADMIN") %}
                                            <strong>Administrador</strong>
                                        {% else %}
                                            <strong>Usuário</strong>
                                        {% endif %}
                                    </h6>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('index_dashboard') }}" class="dropdown-item">Painel Admin</a>
                                    {% endif %}
                                    <a href="{{ path('perfil') }}" class="dropdown-item">Perfil</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ path('app_logout') }}" class="dropdown-item">Sair</a>
                                </div>
                            </li>
                        </ul>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="btn btn-light btn-sm">Entrar</a>
                    {% endif %}
                </div>
                <button class="navbar-toggler"
                        type="button"
                        data-toggle="collapse"
                        data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
        <section class="top-nav">
            <nav class="navbar navbar-expand-lg py-0">
                <div class="container">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ">
                            <li class="nav-item active"> <a class="nav-link" href="{{ path('home') }}">Home</a></li>
                            <li class="nav-item"> <a class="nav-link" href="#">World</a> </li>
                            <li class="nav-item"> <a class="nav-link" href="#">Politics</a> </li>
                            <li class="dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#">Company Services</a>
                                <div class="dropdown-menu" id="m-menu">
                                    <!--dropdown menu header-->
                                    <div class="row">
                                        <!--dropdwown menu row1-->
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                                            <h5 class="text-brown">Category 1</h5>
                                            <a href="#" class="c-link">Link 1</a>
                                            <a href="#" class="c-link">Link 2</a>
                                            <a href="#" class="c-link">Link 3</a>
                                            <a href="#" class="c-link">Link 1</a>
                                            <a href="#" class="c-link">Link 2</a>
                                            <a href="#" class="c-link">Link 3</a>
                                        </div>
                                        <!--dropdwown menu row2-->
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                                            <h5>Category 2</h5>
                                            <a href="#" class="c-link">Link 1</a>
                                            <a href="#" class="c-link">Link 2</a>
                                            <a href="#" class="c-link">Link 3</a>
                                        </div>
                                        <!--dropdwown menu row3-->
                                        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                                            <h5>Category 3</h5>
                                            <a href="#" class="c-link">Link 1</a>
                                            <a href="#" class="c-link">Link 2</a>
                                            <a href="#" class="c-link">Link 3</a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                        <form class="ml-auto">
                            <div class="search mr-2">
                                <input type="text" class="form-control" maxlength="64" placeholder="Pesquisar" />
                                <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
        </section>
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block body %}{% endblock %}
        </div>
        <footer id="dk-footer" class="dk-footer">
            <div class="copyright">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <span>Copyright © 2019, All Right Reserved Seobin</span>
                        </div>
                        <!-- End Col -->
                        <div class="col-md-6">
                            <div class="copyright-menu">
                                <ul>
                                    <li>
                                        <a href="#">Termos & Condições</a>
                                    </li>
                                    <li>
                                        <a href="#">Privacy Policy</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="back-to-top" class="back-to-top">
                <button onclick="topFunction()" id="btn-topo" title="Sobe">
                    <i class="fas fa-chevron-up"></i>
                </button>
            </div>
        </footer>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bootstrap/js/estilo.js') }}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
