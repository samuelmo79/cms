        <!-- início título topo -->
        <nav class="navbar navbar-expand-lg shadow fixed-top navbar-dark navbar-offcanvas"
             style="background-color: #155592;">
            <div class="container">
                <a class="navbar-brand mr-3" href="{{ path('home') }}">CMS</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('home') }}">Home <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <!-- Navbar Search-->
                    <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                        <div class="input-group">
                            <input class="form-control form-control-sm"
                                   type="text"
                                   placeholder="Pesquisar..."
                                   aria-label="Search"
                                   aria-describedby="basic-addon2" />
                            <div class="input-group-append">
                                <button class="btn btn-primary btn-sm" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
    
                <div class="d-none d-sm-block">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a href=""
                               class="nav-link dropdown-toggle"
                               id="nav_usuario_logado"
                               data-toggle="dropdown"
                               aria-haspopup="true"
                               aria-expanded="false">
                                <i class="fa fa-user-circle"></i> {{ app.user.dadosPessoais.nome }} {{ app.user.dadosPessoais.sobrenome }}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav_usuario_logado">
                                <h6 class="dropdown-header">
                                    {% if is_granted("ROLE_ADMIN") %}
                                        <strong>Administrador</strong>
                                    {% else %}
                                        <strong>Usuário</strong>
                                    {% endif %}
                                </h6>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{ path('index_dashboard') }}" class="dropdown-item">Painel Admin</a>
                                {% endif %}
                                <a href="{{ path('perfil') }}" class="dropdown-item">Perfil</a>
                                <div class="dropdown-divider"></div>
                                <a href="{{ path('app_logout') }}" class="dropdown-item">Sair</a>
                            </div>
                        </li>
                    </ul>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-light btn-sm">Entrar</a>
                {% endif %}
                </div>
            
                <button class="navbar-toggler d-block d-lg-none" type="button" id="navToggle">
                    <span class="collapse-icon">
                        <span></span><span></span><span></span><span></span>
                    </span>
                </button>
            
                <div class="navbar-collapse offcanvas-collapse">
                    <div class="mr-2">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    <a href=""
                                       class="nav-link dropdown-toggle"
                                       id="nav_usuario_logado"
                                       data-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        <i class="fa fa-user-circle"></i> {{ app.user.dadosPessoais.nome }} {{ app.user.dadosPessoais.sobrenome }}
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav_usuario_logado">
                                        <h6 class="dropdown-header">
                                            {% if is_granted("ROLE_ADMIN") %}
                                                <strong>Administrador</strong>
                                            {% else %}
                                                <strong>Usuário</strong>
                                            {% endif %}
                                        </h6>
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <a href="{{ path('index_dashboard') }}" class="dropdown-item">Painel Admin</a>
                                        {% endif %}
                                        <a href="{{ path('perfil') }}" class="dropdown-item">Perfil</a>
                                        <div class="dropdown-divider"></div>
                                        <a href="{{ path('app_logout') }}" class="dropdown-item">Sair</a>
                                    </div>
                                </li>
                            </ul>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="btn btn-light btn-sm">Entrar</a>
                        {% endif %}
                    </div>
                    <ul class="sidebar-nav mr-auto">
                        <li class="nav-item active">
